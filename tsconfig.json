{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "module": "CommonJS",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true
  },
  // "typeRoots": ["../node_modules/@types", "../@types"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
